@{
    ViewData["Title"] = "Display All Dishes";
}

<div class="w-50 mx-auto">
    <h1><a href="/">Chefs</a> | Dishes </h1>
    <a href="/dish/new" class="btn btn-primary m-3">Add a Dish</a>
    <h3> Check Out Some of Our Amazing Dishes!!</h3>

        <table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Dish Name</th>
            <th scope="col">Chef</th>
            <th scope="col">Tastiness</th>
            <th scope="col">Calories</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(Dish dish in ViewBag.AllDishes)
            {
                <tr>
                    <td>@dish.DishName</td>
                    <td>@dish.Chef.ChefFirstName @dish.Chef.ChefLastName</td>
                    <td>@dish.Taste</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        }
  </tbody>
</table>
